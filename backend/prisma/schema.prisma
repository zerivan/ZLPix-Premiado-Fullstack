generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model users {
  id           BigInt    @id @default(autoincrement())
  name         String
  email        String    @unique
  phone        String?
  pixKey       String?
  passwordHash String
  createdAt    DateTime  @default(now())

  bilhetes     bilhete[]
  transacoes   transacao[]
}

model admins {
  id           BigInt   @id @default(autoincrement())
  email        String   @unique
  passwordHash String
  createdAt    DateTime @default(now())
}

model bilhete {
  id          BigInt      @id @default(autoincrement())
  userId      BigInt
  dezenas     String
  valor       Float
  pago        Boolean     @default(false)
  sorteioData DateTime
  createdAt   DateTime    @default(now())

  user        users        @relation(fields: [userId], references: [id])
  transacao   transacao[]  // ← AGORA PERMITE MAIS DE UMA TRANSACAO (mas não vamos usar isso)
}

model transacao {
  id           BigInt     @id @default(autoincrement())
  userId       BigInt
  bilheteId    BigInt
  valor        Float
  status       String     @default("pending")
  mpPaymentId  String
  createdAt    DateTime   @default(now())

  user         users       @relation(fields: [userId], references: [id])
  bilhete      bilhete     @relation(fields: [bilheteId], references: [id])

  @@index([bilheteId])
  @@index([mpPaymentId])
}