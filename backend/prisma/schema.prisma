generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model users {
  id           Int      @id @default(autoincrement())
  name         String
  email        String   @unique
  phone        String?
  pixKey       String?  @map("pixkey")
  passwordHash String   @map("passwordhash")
  createdAt    DateTime @default(now()) @map("createdat")

  bilhetes     bilhete[]
  transacoes   transacao[]
}

model admins {
  id           Int      @id @default(autoincrement())
  email        String   @unique
  passwordHash String   @map("passwordhash")
  createdAt    DateTime @default(now()) @map("createdat")
}

model bilhete {
  id          Int      @id @default(autoincrement())
  userId      Int
  dezenas     String
  valor       Float
  pago        Boolean  @default(false)
  sorteioData DateTime @map("sorteiodata")
  createdAt   DateTime @default(now()) @map("createdat")

  user        users     @relation(fields: [userId], references: [id])
  transacao   transacao?
}

model transacao {
  id           Int      @id @default(autoincrement())
  userId       Int
  bilheteId    Int?     
  valor        Float
  status       String   @default("pending")
  mpPaymentId  String?  @map("mppaymentid")
  createdAt    DateTime @default(now()) @map("createdat")

  user         users    @relation(fields: [userId], references: [id])
  bilhete      bilhete? @relation(fields: [bilheteId], references: [id])
}