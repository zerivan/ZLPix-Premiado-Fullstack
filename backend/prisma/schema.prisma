generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum TransacaoTipo {
  BILHETE
}

enum TransacaoCarteiraTipo {
  DEPOSITO
  SAQUE
  PREMIO
}

model users {
  id             Int      @id @default(autoincrement())
  name           String
  email          String   @unique
  phone          String?
  pixKey         String?  @map("pixkey")
  passwordHash   String   @map("passwordhash")
  createdAt      DateTime @default(now()) @map("createdat")

  bilhetes           bilhete[]
  transacoes         transacao[]
  transacoesCarteira transacao_carteira[]
  wallets            wallet[]
  passwordResets     password_reset[]
  pushTokens         PushToken[]
}

model wallet {
  id        Int      @id @default(autoincrement())
  userId    Int      @map("user_id")
  saldo     Decimal  @default(0)
  createdAt DateTime @default(now()) @map("created_at")

  user users @relation(fields: [userId], references: [id])

  @@map("wallet")
}

model admins {
  id           Int      @id @default(autoincrement())
  email        String   @unique
  passwordHash String   @map("passwordhash")
  createdAt    DateTime @default(now()) @map("createdat")
}

model transacao {
  id           Int             @id @default(autoincrement())
  userId       Int             @map("userid")
  valor        Float
  status       String          @default("pending")
  mpPaymentId  String?         @map("mppaymentid")
  tipo         TransacaoTipo   @default(BILHETE)
  metadata     Json?
  createdAt    DateTime        @default(now()) @map("createdat")

  user     users     @relation(fields: [userId], references: [id])
  bilhetes bilhete[] @relation("tb_rel")
}

model transacao_carteira {
  id          Int                    @id @default(autoincrement())
  userId      Int                    @map("userid")
  valor       Float
  tipo        TransacaoCarteiraTipo
  status      String                 @default("pending")
  mpPaymentId String?                @map("mppaymentid")
  metadata    Json?
  createdAt   DateTime               @default(now()) @map("createdat")

  user users @relation(fields: [userId], references: [id])

  @@map("transacao_carteira")
}

model bilhete {
  id               Int        @id @default(autoincrement())
  userId           Int        @map("userid")
  transacaoId      Int?       @map("transacaoid")
  dezenas          String
  valor            Float
  pago             Boolean    @default(false)
  sorteioData      DateTime   @map("sorteiodata")
  status           String     @default("ATIVO")
  resultadoFederal String?    @map("resultadofederal")
  premioValor      Float?     @map("premiovalor")
  apuradoEm        DateTime?  @map("apuradoem")
  ganhadorNome     String?    @map("ganhadornome")
  ganhadorEmail    String?    @map("ganhadoremail")
  ganhadorTelefone String?    @map("ganhadortelefone")
  ganhadorPix      String?    @map("ganhadorpix")
  createdAt        DateTime   @default(now()) @map("createdat")

  user       users      @relation(fields: [userId], references: [id])
  transacao  transacao? @relation("tb_rel", fields: [transacaoId], references: [id])
}

model password_reset {
  id        Int      @id @default(autoincrement())
  userId    Int      @map("userid")
  token     String   @unique
  expiresAt DateTime @map("expiresat")
  used      Boolean  @default(false)
  createdAt DateTime @default(now()) @map("createdat")

  user users @relation(fields: [userId], references: [id])

  @@map("password_resets")
}

model AppContent {
  id          Int      @id @default(autoincrement())
  key         String   @unique
  type        String   @default("text")
  slug        String?  @unique
  enabled     Boolean  @default(true)
  isActive    Boolean  @default(true)
  version     Int      @default(1)
  title       String
  contentHtml String?
  blocksJson  Json?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model PushToken {
  id        Int      @id @default(autoincrement())
  userId    Int      @map("userid")
  token     String   @unique
  platform  String?
  createdAt DateTime @default(now()) @map("createdat")

  user users @relation(fields: [userId], references: [id])

  @@map("push_tokens")
}