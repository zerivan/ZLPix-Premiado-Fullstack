generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model users {
  id           Int      @id @default(autoincrement())
  name         String
  email        String   @unique
  phone        String?
  pixKey       String?  @map("pixkey")
  passwordHash String   @map("passwordhash")
  createdAt    DateTime @default(now()) @map("createdat")

  bilhetes     bilhete[]
  transacoes   transacao[]
  wallet       wallet?          // relaÃ§Ã£o 1â€“1 com carteira
  passwordResets password_reset[] // ðŸ‘ˆ relaÃ§Ã£o com recuperaÃ§Ã£o de senha
}

model wallet {
  id        Int      @id @default(autoincrement())
  userId    Int      @unique @map("userid")
  saldo     Float    @default(0)
  createdAt DateTime @default(now()) @map("createdat")
  updatedAt DateTime @default(now()) @map("updatedat")

  user      users    @relation(fields: [userId], references: [id])
}

model admins {
  id           Int      @id @default(autoincrement())
  email        String   @unique
  passwordHash String   @map("passwordhash")
  createdAt    DateTime @default(now()) @map("createdat")
}

model transacao {
  id           Int        @id @default(autoincrement())
  userId       Int        @map("userid")
  valor        Float
  status       String     @default("pending")
  mpPaymentId  String?    @map("mppaymentid")
  metadata     Json?
  createdAt    DateTime   @default(now()) @map("createdat")

  user         users      @relation(fields: [userId], references: [id])
  bilhetes     bilhete[]  @relation("tb_rel")
}

model bilhete {
  id          Int        @id @default(autoincrement())
  userId      Int        @map("userid")
  transacaoId Int?       @map("transacaoid")
  dezenas     String
  valor       Float
  pago        Boolean    @default(false)
  sorteioData DateTime   @map("sorteiodata")
  createdAt   DateTime   @default(now()) @map("createdat")

  user        users       @relation(fields: [userId], references: [id])
  transacao   transacao?  @relation("tb_rel", fields: [transacaoId], references: [id])
}

model password_reset {
  id        Int      @id @default(autoincrement())
  userId    Int      @map("userid")
  token     String   @unique
  expiresAt DateTime @map("expiresat")
  used      Boolean  @default(false)
  createdAt DateTime @default(now()) @map("createdat")

  user users @relation(fields: [userId], references: [id])

  @@map("password_resets")
}